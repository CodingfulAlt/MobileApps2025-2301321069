<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHabitDetailsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scrollDetailsCore"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBackFromDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutDetailsContentCore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textDetailsNameCore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Име на навика"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="?android:textColorPrimary" />

            <TextView
                android:id="@+id/labelDescriptionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание:"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/textDetailsDescriptionCore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(няма въведено описание)"
                android:textColor="?android:textColorSecondary"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/labelGoalTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цел за деня:"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textDetailsGoalCore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 пъти"
                android:textColor="?android:textColorSecondary"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnEditHabitCore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="РЕДАКТИРАЙ"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCompleteHabitCore"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnCompleteHabitCore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ПРИКЛЮЧЕН НАВИК"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnShareHabitCore"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnShareHabitCore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="СПОДЕЛИ НАВИК"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBackFromDetails"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnBackFromDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="НАЗАД"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
